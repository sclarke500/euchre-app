{
  "name": "euchre-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "npm run dev -w @euchre/client",
    "build": "npm run build -w @euchre/shared && npm run build -w @euchre/client",
    "build:client": "npm run build -w @euchre/client",
    "build:server": "npm run build -w @euchre/server",
    "build:shared": "npm run build -w @euchre/shared",
    "start:server": "npm run start -w @euchre/server",
    "preview": "npm run preview -w @euchre/client",
    "test": "npm test -w @euchre/shared && npm test -w @euchre/server",
    "prepush": "npm run build:shared && npm test && npm run build"
  },
  "dependencies": {
    "zod": "^4.3.6"
  }
}
